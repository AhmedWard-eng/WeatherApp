    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="top|center_horizontal"-->
    <!--        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"-->
    <!--        />-->
</FrameLayout>
